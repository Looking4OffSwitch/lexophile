<!-- Template to display a word and its definition in quadrant layout -->
<style>
  /* Main container and layout - optimized for quadrant (half height/width) */
  .word-card {
    font-family: serif;
    display: flex;
    flex-direction: column;
    padding: 8px 20px;
    background-color: #3a2f25;
    color: #fff;
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
    height: auto;
    min-height: 50vh;
    box-sizing: border-box;
  }
  
  .content-container {
    display: flex;
    flex-direction: column;
    margin: 5px 0 8px 0;
    min-height: 0;
    flex: auto;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
  }
  
  .content-scrollable {
    width: 100%;
    flex: 1;
    overflow: visible;
  }
  
  /* Word title and pronunciation styles - compact for quadrant */
  .word-title-container {
    margin-bottom: 3px;
    text-align: center;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .word-title {
    font-weight: bold;
    margin: 0;
    line-height: 1;
    word-wrap: break-word;
    hyphens: auto;
    font-size: 2.2rem;
  }
  
  .single-horizontal-line {
    border-bottom: 2px solid #fff;
    margin: 2px auto 5px;
    width: 45%;
    white-space: nowrap;
  }
  
  .pronunciation-container {
    width: 100%;
    text-align: center;
    margin: 3px 0;
  }
  
  .pronunciation-combined {
    font-style: italic;
    font-size: 1.0rem;
    margin: 0;
    text-align: center;
    display: inline-block;
  }
  
  /* Content section styles - simplified for quadrant */
  .full-width-section {
    width: 100%;
    text-align: left;
    padding: 0;
  }
  
  .section-title {
    font-size: 1.0rem;
    font-weight: bold;
    margin: 0 0 3px 0;
    text-decoration: underline;
  }
  
  .definition-text, .usage-text {
    font-size: 0.9rem;
    line-height: 1.25;
    margin: 0 0 8px 0;
    overflow-wrap: break-word;
  }
  
  .definition-text {
    margin-bottom: 10px;
  }
  
  .def-usage-section {
    text-align: left;
    margin-bottom: 10px;
  }
  
  /* Title bar styles - compact */
  .title_bar {
    display: flex;
    justify-content: space-between;
    padding: 6px 12px;
    background-color: #333;
    color: #fff;
  }
  
  .title {
    font-weight: bold;
    font-size: 0.9rem;
  }
  
  .instance {
    font-size: 0.9rem;
  }
  
  /* Divider styles */
  .horizontal-line {
    border-bottom: 1px solid #fff;
    margin: 8px 0;
    width: 100%;
  }

  /* Hidden usage section for overflow detection */
  .usage-section {
    display: block;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const wordCard = document.querySelector('.word-card');
  const usageSection = document.querySelector('.usage-section');
  
  if (wordCard && usageSection) {
    // Check if the word card content overflows its container
    const cardHeight = wordCard.clientHeight;
    const scrollHeight = wordCard.scrollHeight;
    
    // If content overflows, hide the usage section
    if (scrollHeight > cardHeight * 1.1) { // 10% tolerance
      usageSection.style.display = 'none';
    }
  }
});
</script>

<div class="word-card">
  <div class="word-title-container">
    <h1 class="word-title">{{ word.word }}</h1>
  </div>
  <div class="single-horizontal-line"></div>
  <div class="pronunciation-container">
    <p class="pronunciation-combined">{{ word.part_of_speech }} / {{ word.phonetic_spelling }}</p>
  </div>
  
  <div class="content-container">
    <div class="content-scrollable">
      <div class="main-content-row">
        <div class="full-width-section">
          <div class="def-usage-section">
            <h2 class="section-title">Definition</h2>
            <p class="definition-text">
              {% if word.definition %}
                {{ word.definition }}
              {% else %}
                No definition available
              {% endif %}
            </p>
            <div class="usage-section">
              <h2 class="section-title">Usage</h2>
              <p class="usage-text">
                {% if word.example_sentence %}
                  {{ word.example_sentence }}
                {% else %}
                  No usage available
                {% endif %}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
    <span class="title">Lexophile</span>
    <span class="instance">Words Unlock Worlds</span>
</div>