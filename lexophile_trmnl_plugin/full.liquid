<!-- Template to display a word and its definition -->
<style>
  /* Main container and layout */
  .word-card {
    font-family: serif;
    display: flex;
    flex-direction: column;
    padding: 15px 40px;
    background-color: #3a2f25;
    color: #fff;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    height: auto;
    min-height: 100%;
    box-sizing: border-box;
  }
  
  .content-container {
    display: flex;
    flex-direction: column;
    margin: 10px 0 15px 0;
    min-height: 0;
    flex: auto;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
  }
  
  .content-scrollable {
    width: 100%;
    flex: 1;
    overflow: visible;
  }
  
  /* Word title and pronunciation styles */
  .word-title-container {
    margin-bottom: 5px;
    text-align: center;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .word-title {
    font-weight: bold;
    margin: 0;
    line-height: 1;
    word-wrap: break-word;
    hyphens: auto;
    font-size: 3.3rem;
  }
  
  .single-horizontal-line {
    border-bottom: 2px solid #fff;
    margin: 2px auto 8px;
    width: 45%;
    white-space: nowrap;
  }
  
  .pronunciation-container {
    width: 100%;
    text-align: center;
    margin: 5px 0;
  }
  
  .pronunciation-combined {
    font-style: italic;
    font-size: 1.3rem;
    margin: 0;
    text-align: center;
    display: inline-block;
  }
  
  .part-of-speech {
    font-style: italic;
    font-size: 1.4rem;
    margin: 8px 0;
    text-align: center;
  }
  
  .pronunciation {
    font-size: 1.2rem;
    margin: 8px 0;
    text-align: center;
  }
  
  /* Section layout styles */
  .main-content-row {
    display: flex;
    width: 100%;
    margin-bottom: 10px;
    padding: 0;
    justify-content: space-between;
    gap: 0;
  }
  
  .left-section {
    width: 70%;
    text-align: left;
    padding: 0;
  }
  
  .spacer-section {
    width: 5%;
    min-width: 20px;
  }
  
  .right-section {
    width: 25%;
    text-align: left;
    padding: 0;
  }
  
  .full-width-section {
    width: 100%;
    text-align: left;
    padding: 0;
  }
  
  /* Content section styles */
  .section-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin: 0 0 4px 0;
    text-decoration: underline;
  }
  
  .right-section .section-title {
    text-align: center;
  }
  
  .definition-text, .usage-text {
    font-size: 1.05rem;
    line-height: 1.35;
    margin: 0 0 6px 0;
    overflow-wrap: break-word;
  }
  
  .definition-text {
    margin-bottom: 16px;
  }
  
  .synonym-text {
    font-size: 0.95rem;
    line-height: 1.3;
    margin: 0 0 6px 0;
    overflow-wrap: break-word;
    text-align: center;
  }
  
  .def-usage-section {
    text-align: left;
    margin-bottom: 20px;
  }
  
  .synonym-antonym-section {
    text-align: left;
    margin-bottom: 20px;
  }
  
  .synonym-section {
    margin-bottom: 20px;
    text-align: left;
  }
  
  .antonym-section {
    text-align: left;
  }
  
  /* Table styles for synonyms and antonyms */
  .synonym-table,
  .antonym-table {
    width: 100%;
    table-layout: fixed;
    margin-bottom: 10px;
    border-collapse: collapse;
    padding: 0;
  }
  
  .section-title-cell {
    width: 100%;
    text-align: center;
    padding: 0;
  }
  
  .content-cell {
    text-align: left;
    padding: 0;
  }
  
  .synonym-table .section-title,
  .antonym-table .section-title {
    margin: 0 0 8px 0;
    text-align: center;
  }
  
  /* First known use section */
  .first-use-container {
    width: 100%;
    text-align: center;
    margin: 10px 0 5px 0;
  }
  
  .first-use {
    font-size: 1.1rem;
    display: inline-block;
  }
  
  /* Title bar styles */
  .title_bar {
    display: flex;
    justify-content: space-between;
    padding: 8px 15px;
    background-color: #333;
    color: #fff;
  }
  
  .title {
    font-weight: bold;
  }
  
  /* Divider styles */
  .horizontal-line {
    border-bottom: 1px solid #fff;
    margin: 10px 0;
    width: 100%;
  }
  
  /* Custom scrollbar for better visibility */
  .word-left::-webkit-scrollbar, 
  .word-right::-webkit-scrollbar {
    width: 5px;
  }
  
  .word-left::-webkit-scrollbar-thumb, 
  .word-right::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }
  
  /* DEBUG BOXES - comment/uncomment to enable/disable */
  
  /* Disabled debug boxes
  .word-card {
    border: 2px solid red !important;
  }
  .main-content-row {
    border: 2px solid blue !important;
  }
  .left-section {
    border: 2px solid green !important;
  }
  .spacer-section {
    border: 2px solid magenta !important;
  }
  .right-section {
    border: 2px solid orange !important;
  }
  .def-usage-section {
    border: 2px solid purple !important;
  }
  .synonym-antonym-section {
    border: 2px solid cyan !important;
  }
  */
</style>

<div class="word-card">
  <div class="word-title-container">
    <h1 class="word-title">{{ word.word }}</h1>
  </div>
  <div class="single-horizontal-line"></div>
  <div class="pronunciation-container">
    <p class="pronunciation-combined">{{ word.part_of_speech }} / {{ word.phonetic_spelling }}</p>
  </div>
  
  <div class="content-container">
    <div class="content-scrollable">
      {% if word.synonyms.size > 0 or word.antonyms.size > 0 %}
      <div class="main-content-row">
        <div class="left-section">
          <div class="def-usage-section">
            <h2 class="section-title">Definition</h2>
            <p class="definition-text">
              {% if word.definition %}
                {{ word.definition }}
              {% else %}
                No definition available
              {% endif %}
            </p>
            <h2 class="section-title">Usage</h2>
            <p class="usage-text">
              {% if word.example_sentence %}
                {{ word.example_sentence }}
              {% else %}
                No usage available
              {% endif %}
            </p>
          </div>
        </div>
        <div class="spacer-section"></div>
        <div class="right-section">
          <div class="synonym-antonym-section">
            {% if word.synonyms.size > 0 %}
            <table class="synonym-table">
              <tr>
                <td class="section-title-cell">
                  <h2 class="section-title">Synonyms</h2>
                </td>
              </tr>
              <tr>
                <td class="content-cell">
                  <p class="synonym-text">
                    {% for synonym in word.synonyms %}
                      {{ synonym }}{% unless forloop.last %}, {% endunless %}
                    {% endfor %}
                  </p>
                </td>
              </tr>
            </table>
            {% endif %}
            {% if word.antonyms.size > 0 %}
            <table class="antonym-table">
              <tr>
                <td class="section-title-cell">
                  <h2 class="section-title">Antonyms</h2>
                </td>
              </tr>
              <tr>
                <td class="content-cell">
                  <p class="synonym-text">
                    {% for antonym in word.antonyms %}
                      {{ antonym }}{% unless forloop.last %}, {% endunless %}
                    {% endfor %}
                  </p>
                </td>
              </tr>
            </table>
            {% endif %}
          </div>
        </div>
      </div>
      {% else %}
      <div class="main-content-row">
        <div class="full-width-section">
          <div class="def-usage-section">
            <h2 class="section-title">Definition</h2>
            <p class="definition-text">
              {% if word.definition %}
                {{ word.definition }}
              {% else %}
                No definition available
              {% endif %}
            </p>
            <h2 class="section-title">Usage</h2>
            <p class="usage-text">
              {% if word.example_sentence %}
                {{ word.example_sentence }}
              {% else %}
                No usage available
              {% endif %}
            </p>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
  
  <div class="first-use-container">
    <p class="first-use">First known use: {{ word.first_known_usage }}</p>
  </div>
</div>

<div class="title_bar">
    <span class="title">Lexophile</span>
    <span class="instance">Words Unlock Worlds</span>
</div>
