<!-- Half Vertical Layout: Page width is half, height remains full. First known usage section omitted. -->
<style>
  /* Layout container styles */
  .word-card {
    font-family: serif;
    display: flex;
    flex-direction: column;
    padding: 15px 18px; /* reduced horizontal padding */
    background-color: #3a2f25;
    color: #fff;
    width: 100%;
    max-width: 450px; /* half of full layout */
    margin: 0 auto;
    min-height: 100%;
    box-sizing: border-box;
  }
  .content-container {
    display: flex;
    flex-direction: column;
    margin: 10px 0 15px 0;
    min-height: 0;
    flex: auto;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
  }
  .content-scrollable {
    width: 100%;
    flex: 1;
    overflow: visible;
  }

  /* Title styles */
  .word-title-container {
    margin-bottom: 5px;
    text-align: center;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .word-title {
    font-weight: bold;
    margin: 0;
    line-height: 1;
    word-wrap: break-word;
    hyphens: auto;
    font-size: 2.1rem; /* smaller for half width */
  }
  .single-horizontal-line {
    border-bottom: 2px solid #fff;
    margin: 2px auto 8px;
    width: 60%;
    white-space: nowrap;
  }

  /* Pronunciation and part of speech */
  .pronunciation-container {
    width: 100%;
    text-align: center;
    margin: 5px 0;
  }
  .pronunciation-combined {
    font-style: italic;
    font-size: 1.1rem;
    margin: 0;
    text-align: center;
    display: inline-block;
  }
  .part-of-speech {
    font-style: italic;
    font-size: 1.1rem;
    margin: 8px 0;
    text-align: center;
  }

  /* Main content row */
  .main-content-row {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 10px;
    padding: 0;
    gap: 0;
  }

  /* Definition and usage section */
  .def-usage-section {
    text-align: left;
    margin-bottom: 4px; /* further reduce space below usage */
  }
  .section-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin: 0 0 4px 0;
    text-decoration: underline;
  }
  .definition-text {
    font-size: 0.95rem;
    line-height: 1.3;
    margin: 0 0 12px 0;
    overflow-wrap: break-word;
  }
  .usage-text {
    font-size: 0.95rem;
    line-height: 1.3;
    margin: 0 0 6px 0;
    overflow-wrap: break-word;
  }

  /* Synonym/Antonym section */
  .synonym-antonym-section {
    text-align: left;
    margin-bottom: 6px; /* reduced space below synonyms/antonyms */
    margin-top: 0; /* remove extra space above */
  }
  .synonym-table, .antonym-table {
    width: 100%;
    table-layout: fixed;
    margin-bottom: 8px;
    border-collapse: collapse;
    padding: 0;
  }
  .section-title-cell {
    width: 100%;
    text-align: center;
    padding: 0;
  }
  .content-cell {
    text-align: left;
    padding: 0;
  }
  .synonym-text {
    font-size: 0.9rem;
    line-height: 1.2;
    margin: 0 0 2px 0; /* reduce space between lines */
    overflow-wrap: break-word;
    text-align: left; /* left align text */
  }
  .synonym-text strong {
    text-decoration: underline;
  }

  /* Miscellaneous */
  .horizontal-line {
    border-bottom: 1px solid #fff;
    margin: 10px 0;
    width: 100%;
  }
</style>

<div class="word-card">
  <div class="word-title-container">
    <h1 class="word-title">{{ word.word }}</h1>
  </div>
  <div class="single-horizontal-line"></div>
  <div class="pronunciation-container">
    <p class="pronunciation-combined">{{ word.part_of_speech }} / {{ word.phonetic_spelling }}</p>
  </div>
  <div class="content-container">
    <div class="content-scrollable">
      <div class="main-content-row">
        <div class="def-usage-section">
          <h2 class="section-title">Definition</h2>
          <p class="definition-text">
            {% if word.definition %}
              {{ word.definition }}
            {% else %}
              No definition available
            {% endif %}
          </p>
          <h2 class="section-title">Usage</h2>
          <p class="usage-text">
            {% if word.example_sentence %}
              {{ word.example_sentence }}
            {% else %}
              No usage available
            {% endif %}
          </p>
        </div>
        <div class="synonym-antonym-section">
          {% if word.synonyms.size > 0 %}
            <div class="synonym-text">
              <strong>Synonyms:</strong>
              {% for synonym in word.synonyms %}
                {{ synonym }}{% unless forloop.last %}, {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
          {% if word.antonyms.size > 0 %}
            <div class="synonym-text">
              <strong>Antonyms:</strong>
              {% for antonym in word.antonyms %}
                {{ antonym }}{% unless forloop.last %}, {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
    <span class="title">Lexophile</span>
    <span class="instance">Words Unlock Worlds</span>
</div>
